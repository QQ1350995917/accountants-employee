<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/message_item_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:gravity="center_horizontal"
            android:textColor="@color/color_black"
            android:background="@color/color_black_transparent_50"/>
    <ImageView
            android:id="@+id/message_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_item_timer"
            android:background="@drawable/message_item_icon"
            android:layout_margin="5dp"/>

    <TextView
            android:id="@+id/message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_item_timer"
            android:layout_toRightOf="@id/message_item_icon"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:layout_marginRight="10dp"/>

    <TextView
            android:id="@+id/message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_item_title"
            android:textColor="@color/color_black"
            android:layout_toRightOf="@id/message_item_icon"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_marginRight="10dp"
            />

    <TextView
            android:id="@+id/message_item_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_black_transparent_50"
            android:layout_below="@id/message_item_content"
            android:layout_toRightOf="@id/message_item_icon"
            android:layout_margin="2dp"
            android:layout_marginRight="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_item_line2"
            android:layout_toRightOf="@id/message_item_icon"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            >
        <TextView
                android:id="@+id/message_item_explore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#3BB658"
                android:gravity="center"/>

        <TextView
                android:id="@+id/message_item_join"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#3BB658"
                android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
