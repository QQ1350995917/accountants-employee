<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <include layout="@layout/include_title"></include>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/string_settings_origin_password_hint"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/string_settings_new_password_hint"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/string_settings_new_password_repeat_hint"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/string_settings_new_password_common"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/string_settings_modify_password_sure"/>
</LinearLayout>